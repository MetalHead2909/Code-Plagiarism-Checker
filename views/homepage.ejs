                `;
            }
            return items;
        }

        function generatePairs(arr) {
                let result = [];
                let n = arr.length;
                
                for (let i = 0; i < n; i++) {
                    let pairs = [];
                    for (let j = i + 1; j < n; j++) {
                        pairs.push(`${arr[i]}-${arr[j]}`);
                    }
                    if (pairs.length > 0) {
                        result.push(pairs);
                    }
                }
                
                return result;
            }


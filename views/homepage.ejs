        function animateBar(barId, numberId, value, duration) {
            let bar = document.getElementById(barId);
            let number = document.getElementById(numberId);
            let start = 0;
            let end = value;
            let increment = end / (duration / 10);

            function updateBar() {
                start += increment;
                if (start >= end) {
                    start = end;
                    clearInterval(interval);
                }
                bar.style.width = start + "%";
                number.textContent = start.toFixed(2);
            }
            
            let interval = setInterval(updateBar, 10);
        }

